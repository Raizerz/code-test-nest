{
  "name": "cars-api",
  "version": "1.0.0",
  "description": "API",
  "author": "Igor T.",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"e2e/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/main",
    "docker-middleware-dev": "docker-compose -f docker-compose.development.yml up -d",
    "stop-docker-middleware-dev": "docker-compose -f docker-compose.development.yml down -v",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest -i",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json --runInBand"
  },
  "dependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/config": "^0.0.7",
    "@nestjs/common": "6.1.1",
    "@nestjs/core": "6.1.1",
    "@nestjs/microservices": "6.1.1",
    "@nestjs/platform-express": "6.1.1",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/swagger": "4.2.4",
    "@nestjs/testing": "^6.10.11",
    "@nestjs/typeorm": "^6.1.3",
    "body-parser": "1.18.3",
    "class-transformer": "0.3.1",
    "class-validator": "0.8.5",
    "cors": "2.8.3",
    "cron": "^1.7.2",
    "express": "4.16.2",
    "helmet": "^3.21.2",
    "lodash": "4.17.11",
    "nconf": "0.8.4",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.2",
    "typeorm": "^0.2.21"
  },
  "devDependencies": {
    "@types/cron": "^1.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "23.3.1",
    "@types/lodash": "4.14.66",
    "@types/node": "7.0.5",
    "@types/supertest": "^2.0.4",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "23.5.0",
    "minimist": "1.2.0",
    "prettier": "1.11.1",
    "shelljs": "^0.8.2",
    "superagent-defaults": "^0.1.14",
    "supertest": "^3.1.0",
    "ts-jest": "23.1.4",
    "ts-node": "2.1.0",
    "tslint": "5.3.2",
    "ts-loader": "^6.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.2.2",
    "yarn": "^1.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
